<!DOCTYPE html>
<html>
<head>
    <title>Create Page</title>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-200">
    <%- include("header.ejs") %>
    <div class="container mx-auto mt-5 p-8">
        <div class="grid grid-cols-5">
            <div class="col-start-1 col-span-5 bg-white p-8 rounded-3xl shadow-2xl">
                <h1 class="text-2xl text-gray-800 font-semibold mb-6">Create a New Page</h1>
                <form action="/course/<%= courseId %>/chapter/<%= chapterId %>/page" method="POST" class="max-w-20 mx-auto">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="mb-4">
                        <label for="title" class="text-gray-600 block">Page Title:</label>
                        <input type="text" name="title" id="title" required
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500 transition duration-300 hover:border-blue-500">
                    </div>
                    
                    <div class="mb-4">
                        <label for="chapterId" class="text-gray-600 block">Select Chapter:</label>
                        <select name="chapterId" id="chapterId" required
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500 transition duration-300 hover:border-blue-500">
                            <% chapters.forEach(function(chapter) { %>
                                <option value="<%= chapter.id %>"><%= chapter.title %></option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="mb-4">
                        <label for="content" class="text-gray-600 block">Page Content:</label>
                        <textarea name="content" id="content" rows="16" required
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-blue-500 transition duration-300 hover:border-blue-500"></textarea>
                    </div>

                    <button type="submit" class="w-full py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600 focus:outline-none transition duration-300">Create Page</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
