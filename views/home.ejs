<!DOCTYPE html>
<html>
<head>
    <title>Educator Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <%- include('header.ejs') %>
    <div class="container mx-auto mt-6 p-4 bg-white rounded-lg shadow-lg">
        <div class="flex justify-between items-center mb-4">
            <div class="text-left">
                <h2 class="text-2xl font-semibold">Welcome, <%= firstname %> <%= lastname %>!</h2>
            </div>
            <div class="text-right">
                <a href="/signout" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded inline-block">Sign Out</a>
            </div>
        </div>

        <div class="text-left">
            <% if (userRole === 'Educator') { %>
            <div>
                <a href="/course"
                    class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block mb-2">
                    Create Course
                </a>
            </div>
            <div>
                <a href="/my-course"
                    class="bg-green-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block mb-2">
                    My Course
                </a>
            </div>
            <div>
                <a href="/reports"
                    class="bg-red-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded inline-block mb-2">
                    Reports
                </a>
            </div>
            <% } %>
        </div>
    </div>

    <div class="container mx-auto mt-6 p-4 bg-white rounded-lg shadow-lg">
        <h3 class="text-2xl font-semibold">Available Courses</h3>

        <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Replace with dynamic course data from the database -->
            <% courses.forEach(function(course) { %>
                <div class="bg-gray-200 p-4 rounded shadow-lg hover:shadow-lg transition duration-300 ease-in-out mb-4 cursor-pointer ">
                    <h2 class="text-lg font-bold mb-2"><%= course.title %></h2>
                    <a href="/courseDetails/<%= course.id %>"><button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">View Course</button></a>
                    <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-2"
                        onclick="enrollCourse('<%= course.id %>')">Enroll</button>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
